{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "FileName": "application.{0:yyyyMMdd}.log",
      "Append": true,
      "MinimumLevel": "Information",
      "FileSizeLimitBytes": 0,
      "MaxRollingFiles": 0
    }
  },
  "AllowedHosts": "*"
}
